<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <%- include('../common/style') %>
</head>
<body>
    <%- include('../common/nav') %>

    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <i class="align-middle fal fa-tags font-weight-bold"></i>
                <h6 class="d-inline font-weight-light ml-2 align-middle font-weight-bold">Tags</h4>
            </div>
            <div class="card-body">
                <table class="table table-bordered text-center">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Operation</th>
                    </tr>
                    <% if (tags.length > 0) { %>
                        <% for (tag of tags) { %>
                            <tr>
                                <td><%= tag.id %></th>
                                <td><%= tag.name %></th>
                                <td>
                                    <a href="/admin/tag/delete/<%= tag.id %>" class="text-danger"><i class="fa fa-trash-alt"></i></a>
                                    <a href="/admin/tag/edit/<%= tag.id %>" class="text-primary"><i class="fa fa-edit"></i></a>
                                </th>
                            </tr>
                        <% } %>
                    <% } else { %>
                        <tr>
                            <td colspan="3">
                                <div class="alert alert-info mt-2 text-center">No Tags created yet</div>
                            </th>
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>
    
    <%- include('../common/js') %>
</body>
</html>