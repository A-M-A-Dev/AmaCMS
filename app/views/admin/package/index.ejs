<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <%- include('../common/style') %>

    <style>
        table td {
            vertical-align: middle !important;
        }
    </style>
</head>
<body>
    <%- include('../common/nav') %>

    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <i class="align-middle fal fa-tags font-weight-bold"></i>
                <h6 class="d-inline font-weight-light ml-2 align-middle font-weight-bold">Packages</h4>
            </div>
            <div class="card-body">
                <table class="table table-bordered text-center">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Views</th>
                        <th>Likes</th>
                        <th>Sell Count</th>
                        <th>Price</th>
                        <th>Operation</th>
                    </tr>
                    <% if (packages.length > 0) { %>
                        <% for (package of packages) { %>
                            <tr>
                                <td style="width: 5%;"><%= package.id %></td>
                                <td><%= package.title %></td>
                                <td style="width: 5%;"><%= package.view %></td>
                                <td style="width: 5%;"><%= package.likes %></td>
                                <td style="width: 10%;"><%= package.sellCount %></td>
                                <td style="width: 5%;"><%= package.price %></td>
                                <td style="width: 10%;">
                                    <div class="form-inline">
                                        <button
                                            onclick="deletePackageButton('<%= package.id %>', '<%= package.title %>')"
                                            class="btn btn-outline-danger border-0"
                                        ><i class="fa fa-trash-alt"></i></button>
                                        <button onclick="editPackage('<%= package.id %>')" class="btn btn-outline-primary border-0"><i class="fa fa-edit"></i></button>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    <% } else { %>
                        <tr>
                            <td colspan="7">
                                <div class="alert alert-info mt-2 text-center">No Packages created yet</div>
                            </th>
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>

    <!-- Delete Modal -->
    <div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Are you sure to delete Package "<span id="delete-title"></span>" with id <span id="delete-id"></span>??</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button onclick="deletePackage()" type="button" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <%- include('../common/js') %>
    <script src="/js/admin/package.js"></script>
</body>
</html>