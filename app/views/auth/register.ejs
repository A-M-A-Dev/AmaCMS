<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>

    <%- include('../common/style') %>
    <link rel="stylesheet" type="text/css" href="/css/front/topMenu.css">
    <link rel="stylesheet" type="text/css" href="/css/front/footer.css">
</head>
<body>
    <%- include('../front/top_menu') %>

    <div class="container mt-5 col-12 col-md-4">
        <div class="card border-primary">
            <div class="card-header text-primary border-primary"><i class="fal fa-sign-in mr-1"></i> Register</div>
            <div class="card-body">
                <% if (locals.errors) { %>
                    <% for (error of errors) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                    <% } %>
                <% } %>
                <form method="POST">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email" name="email" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Repeat Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword2" placeholder="Repeat your password" name="repassword" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label for="nameInput">Firstname</label>
                        <input type="text" class="form-control" id="nameInput" placeholder="Firstname" name="firstname" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label for="nameInput">Lastname</label>
                        <input type="text" class="form-control" id="nameInput" placeholder="Lastname" name="lastname" autocomplete="off">
                    </div>
                    <button type="submit" class="btn btn-outline-primary">Register</button>
                </form>
            </div>
        </div>
    </div>

    <%- include('../front/footer') %>

    <%- include('../common/js') %>

    <script src="/js/front/topMenu.js"></script>
</body>
</html>